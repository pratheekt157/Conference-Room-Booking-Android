<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true </item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:titleTextStyle">@color/white</item>
        <item name="android:windowActionBarOverlay">@color/colorPrimary</item>


        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary1</item>
        <item name="colorAccent">@color/colorPrimary1</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">true</item>
        <item name="alertDialogTheme">@style/Theme.MaterialComponents.Light</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary1</item>
        <item name="colorAccent">@color/colorPrimary1</item>
    </style>




    <style name="sighin" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary1</item>
    </style>


    <style name="flatbutton" parent="Theme.MaterialComponents.Light">
        <item name="buttonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored
        </item>
        <item name="colorControlHighlight">
            @color/colorAccent
        </item>
        <item name="colorAccent">@color/black</item>
    </style>


    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@color/white</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
