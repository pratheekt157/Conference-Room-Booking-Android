<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/recycler_view_background"
        android:id="@+id/r1_dashboard"
        android:layout_height="wrap_content">

    <ProgressBar
            android:id="@+id/upcoming_main_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/booking_refresh_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dashBord_recyclerView1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/fragment_upcoming_booking_list_items"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ProgressBar
            android:id="@+id/upcoming_booking_progress_bar"
            android:visibility="gone"
            android:layout_width="@dimen/progress_bar_width_dp_25"
            android:layout_height="@dimen/progress_bar_width_dp_25"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    <ImageView
            android:id="@+id/upcoming_empty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/emptystate1"
            android:layout_marginTop="@dimen/dp_170"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
    />
</RelativeLayout>
