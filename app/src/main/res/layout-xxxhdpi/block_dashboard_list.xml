<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_corner_radius_dp_5">
    <RelativeLayout
            android:padding="@dimen/dp_16"
            android:background="@color/white"
            android:orientation="vertical"
            android:elevation="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView

                android:hint="@string/block_purpose_hint"
                android:textColorHint="@color/black"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:ellipsize="end"
                android:drawablePadding="@dimen/dp_16"
                android:drawableStart="@drawable/ic_block"
                android:maxLines="1"
                android:paddingEnd="@dimen/dp_32"
                android:id="@+id/block_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:drawablePadding="@dimen/dp_16"
                android:textColor="@color/sub_item_text_color"
                android:textSize="@dimen/sp_12"
                android:paddingEnd="@dimen/dp_32"
                android:drawableStart="@drawable/ic_business_black_24dp"
                android:layout_marginTop="@dimen/dp_8"
                android:id="@+id/block_conferenceRoomName"
                android:text="@string/room_location_hint"
                android:layout_below="@id/block_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:id="@+id/date_time_layout"
                android:layout_below="@id/block_conferenceRoomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:drawablePadding="@dimen/dp_16"
                    android:textColor="@color/sub_item_text_color"
                    android:textSize="@dimen/sp_12"
                    android:id="@+id/block_date"
                    android:drawableStart="@drawable/ic_today_resized"
                    android:layout_marginTop="8dp"
                    android:text="@string/date_hint"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/block_from_time"
                    android:drawablePadding="@dimen/dp_16"
                    android:textColor="@color/sub_item_text_color"
                    android:textSize="@dimen/sp_12"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_time_dashboard"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/start_end_time_hint"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_below="@+id/date_time_layout"
                android:layout_marginTop="@dimen/dp_8"
                android:id="@+id/line"
                android:background="#E5E5E5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

        <TextView
                android:layout_below="@+id/line"
                android:textColor="@color/colorPrimary"
                android:text="@string/unblock_label"
                android:id="@+id/unblock"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
