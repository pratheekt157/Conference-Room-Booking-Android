<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/reurring_booking_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:id="@+id/card_view_for_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:padding="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:weightSum="100">
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manager_from_time_layout"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:errorEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fromTime_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:maxLines="1"
                            android:editable="false"
                            android:focusable="false"
                            android:textColor="@color/textColorGray"
                            android:drawableStart="@drawable/ic_schedule_black_24dp"
                            android:drawablePadding="5dp"
                            android:maxLength="50"
                            android:hint="@string/start_time"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manager_to_time_layout"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginLeft="20dp"
                        app:errorEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/toTime_manager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:textColor="@color/textColorGray"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="text"
                            android:hint="@string/end_time"
                            android:drawableStart="@drawable/ic_schedule_black_24dp"
                            android:drawablePadding="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/start_date_layout"
                    android:padding="8dp"
                    android:layout_below="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manager_from_date_layout"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:errorEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:editable="false"
                            android:focusable="false"
                            android:textColor="@color/textColorGray"
                            android:id="@+id/date_manager"
                            android:hint="@string/start_date"
                            android:drawableStart="@drawable/ic_today_black_24dp"
                            android:drawablePadding="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/manager_to_date_layout"
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginLeft="20dp"
                        app:errorEnabled="true"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusable="false"
                            android:textColor="@color/textColorGray"
                            android:editable="false"
                            android:id="@+id/to_date_manager"
                            android:hint="@string/end_date"
                            android:drawableStart="@drawable/ic_today_black_24dp"
                            android:drawablePadding="5dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView
                    android:id="@+id/select_day_label"
                    android:layout_below="@+id/start_date_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_day"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/grey"/>
            <com.google.android.material.card.MaterialCardView
                    android:layout_below="@+id/select_day_label"
                    android:id="@+id/day_picker_card"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:padding="5dp"
                    app:cardCornerRadius="5dp">
                <ca.antonious.materialdaypicker.MaterialDayPicker
                        android:id="@+id/day_picker"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:layout_below="@+id/day_picker_card"
                    android:id="@+id/error_day_selector_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ba160c"
                    android:visibility="invisible"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    android:text="selected days list can't be empty"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/manager_purpose_layout"
                    android:layout_below="@id/error_day_selector_text_view"
                    android:layout_width="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/manager_event_name_text_view"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/textColorGray"
                        android:hint="@string/purpose"
                        android:drawableStart="@drawable/ic_local_offer_black_24dp"
                        android:drawablePadding="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/manager_capacity_layout"
                    android:layout_below="@id/manager_purpose_layout"
                    android:layout_width="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="5"
                    android:focusableInTouchMode="true"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/manager_room_capacity"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:singleLine="true"
                        android:textColor="@color/textColorGray"
                        android:hint="@string/room_capacity"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                    android:layout_below="@+id/manager_capacity_layout"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/manager_building_name_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/spinner_rect"/>
            <TextView
                    android:id="@+id/manager_text_view_error_spinner_building"
                    android:layout_below="@id/manager_building_name_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ba160c"
                    android:visibility="invisible"
                    android:layout_marginStart="16dp"
                    android:textSize="12sp"
                    android:inputType="number"
                    android:text="Select building"/>
            <Button
                    android:text="search"
                    android:layout_below="@+id/manager_building_name_spinner"
                    android:layout_margin="30dp"
                    android:id="@+id/manager_search_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TableRow
                    android:layout_below="@+id/manager_search_room"
                    android:id="@+id/manager_horizontal_line_below_search_button"
                    android:visibility="gone"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
            <TextView
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    android:background="@drawable/rectangle"
                    android:text="Sorry No Room available.Have look on Suggestions"
                    android:id="@+id/manager_suggestions"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/manager_horizontal_line_below_search_button"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:background="#F7F7F7"
                    android:layout_below="@id/manager_suggestions"
                    android:visibility="visible"
                    android:layout_margin="2dp"
                    android:id="@+id/manager_recycler_view_room_list"
                    android:layout_width="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/conference_room_list"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>
