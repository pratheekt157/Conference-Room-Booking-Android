<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:id="@+id/r1_dashboard"
        android:layout_height="wrap_content">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_marginTop="55dp"
            android:id="@+id/booking_refresh_layout"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:layout_width="match_parent">

        <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dashBord_recyclerView1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/dashboard_list"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <ImageView
            android:id="@+id/empty_view"
            android:layout_width="359dp"
            android:layout_height="342dp"
            android:visibility="gone"
            android:src="@drawable/emptystate1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"/>
    <com.github.clans.fab.FloatingActionButton
            android:src="@drawable/fab_add"
            android:id="@+id/user_input"
            app:fab_label="Book Rooms"
            android:layout_alignParentEnd="true"
            app:fab_size="normal"
            app:fab_colorPressed="@color/colorPrimary1"
            app:menu_colorPressed="@color/colorPrimary"
            app:fab_colorNormal="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>


