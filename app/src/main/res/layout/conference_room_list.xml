<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/main_card"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
    <RelativeLayout
            android:padding="16dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:drawableStart="@drawable/ic_completed"
                android:drawablePadding="16dp"
                android:text="Rajas(1st floor) [10 people]"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/building_name"
                android:layout_below="@id/room_name"
                android:paddingRight="4dp"
                android:hint="Pasta, Koramangala"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:drawablePadding="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        <TextView
                android:layout_below="@+id/building_name"
                android:id="@+id/permission_required_text_view"
                android:paddingRight="4dp"
                android:text="Permission Required"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_pending"
                android:drawableTint="@color/error_color"
                android:textSize="12sp"
                android:visibility="gone"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:drawablePadding="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

        <View
                android:layout_below="@id/permission_required_text_view"
                android:layout_marginTop="8dp"
                android:id="@+id/view_landing_main"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                android:id="@+id/linear_layout_1"
                android:layout_below="@id/view_landing_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/ami_room1"
                    android:hint="Projector"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_projector"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD"
                    android:visibility="gone"
                    android:drawableTint="@color/grey"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            <TextView
                    android:id="@+id/ami_room2"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:drawableTint="@color/grey"
                    android:textColor="#BDBDBD"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:hint="WhiteBoard-Marker"
                    android:drawableStart="@drawable/ic_white_board2"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="2"
                android:id="@+id/linear_layout_2"
                android:layout_below="@id/linear_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/ami_room3"
                    android:hint="Monitor"
                    android:drawableTint="@color/grey"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_live_tv_black_24dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            <TextView
                    android:id="@+id/ami_room4"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:drawableTint="@color/grey"
                    android:textColor="#BDBDBD"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:hint="Speaker"
                    android:drawableStart="@drawable/ic_speaker"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="2"
                android:id="@+id/linear_layout_3"
                android:layout_below="@id/linear_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/ami_room5"
                    android:drawableTint="@color/grey"
                    android:hint="Extension Board"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_extension_board"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="#BDBDBD"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


