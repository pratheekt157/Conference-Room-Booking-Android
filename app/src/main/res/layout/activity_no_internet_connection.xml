<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:layout_marginTop="94dp"
            android:id="@+id/no_internet_image"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cable"
            android:layout_width="150dp"
            android:layout_height="290dp"/>

    <TextView
            android:layout_below="@+id/no_internet_image"
            android:id="@+id/no_internet_message"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Connection error"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_below="@+id/no_internet_message"
            android:id="@+id/no_internet_message2"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Check your network settings and try again"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <Button
            android:id="@+id/retry_button"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/no_internet_message2"
            android:text="Retry"
            android:layout_centerHorizontal="true"
            android:layout_width="190dp"
            android:layout_height="wrap_content"/>
</RelativeLayout>