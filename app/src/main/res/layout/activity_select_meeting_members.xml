<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.SelectMeetingMembersActivity">
    <ProgressBar
            android:id="@+id/select_meeting_members_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:padding="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_margin="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </HorizontalScrollView>
    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_below="@+id/scroll_view"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:background="@color/white"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:hint="@string/search"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableEnd="@drawable/ic_search"
           />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/add_email"
            android:layout_below="@id/card_view"
            android:text="@string/add_email"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/add_email"
            android:id="@+id/select_member_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/select_member_items"/>

    <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:fab_colorPressed="@color/colorPrimary1"
            app:menu_colorPressed="@color/colorPrimary"
            app:fab_colorNormal="@color/colorPrimary"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:id="@+id/next_activity"
    />
</RelativeLayout>