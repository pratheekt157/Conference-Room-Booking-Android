<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout_icon">
            <TextView
                    android:text="Unblock"
                    android:layout_height="wrap_content"
                    android:id="@+id/unblock"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="8dp"
                    android:drawableTop="@drawable/ic_block"
                    android:layout_width="wrap_content"/>
        </LinearLayout>
        <View
                android:layout_width="1dp"
                android:layout_toRightOf="@+id/linear_layout_icon"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
        <LinearLayout
                android:layout_toEndOf="@+id/linear_layout_icon"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

            <TextView
                    android:text="Ac Under Maintenance"
                    android:fontFamily="@font/roboto"
                    android:drawablePadding="16dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/block_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:drawablePadding="16dp"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:id="@+id/block_conferenceRoomName"
                    android:drawableStart="@drawable/ic_room_resized"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    android:text="Prithvi(1st floor), Main Building"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:drawablePadding="16dp"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:id="@+id/block_date"
                        android:drawableStart="@drawable/ic_today_resized"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:text="30 June, 2019"
                        android:layout_below="@id/cancelled_building_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/block_from_time"
                        android:drawablePadding="16dp"
                        android:textColor="#333333"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_marginStart="32dp"
                        android:layout_toRightOf="@id/cancelled_date"
                        android:drawableStart="@drawable/ic_time_dashboard"
                        android:layout_marginTop="8dp"
                        android:text="07:30 - 08:30"
                        android:layout_below="@id/cancelled_building_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

